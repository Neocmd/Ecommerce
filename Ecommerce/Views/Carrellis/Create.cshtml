@model Ecommerce.Models.Carrelli

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Carrelli</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col">

                <div id="Id" style="display: none;">
                    <input type="text" class="text-primary" name="Id" required value="@ViewBag.NuovoCarrelloId" />
                </div>

            </div>
            <div class="form-group">
                <label asp-for="UtenteId" class="control-label"></label>
                <select asp-for="UtenteId" class ="form-control" asp-items="ViewBag.UtenteId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
